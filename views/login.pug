html
    head
        title Login
body

    div        
        a(href = "/") Home  
        a(href = "/users") Users  
        each s in session
            if !s.loggedIn
                a(href = "/login", style = "float: right;") Login  
                br
                a(href = "/register", style = "float: right;") Register
                br
                h2 Login
                p Username: 
                    input#username(type = "textbox")
                p Password: 
                    input#password(type = "textbox") 
                button#submit(type="button", onclick = "login()") Submit
            else
                a(href = "/order") Order  
                a(href = "/logout", style = "float: right;") Log Out
                p(style = "text-align: right;") Logged in as #{s.user} 
            script(type = "text/javascript", src = "./client.js")